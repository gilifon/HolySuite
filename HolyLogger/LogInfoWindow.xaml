<Window x:Class="HolyLogger.LogInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:local="clr-namespace:HolyLogger"
        mc:Ignorable="d"
        Title="Log Info" Height="300" Width="300">
    <Grid ShowGridLines="False" Margin="0,2,0,-2">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <DockPanel Name="Panel00" Grid.Row="0" Grid.Column="0">
            <lvc:PieChart Name="Chart" Grid.Row="1" Series="{Binding Bands}" 
                      LegendLocation="None" InnerRadius="20">
                <lvc:PieChart.ChartLegend>
                    <lvc:DefaultLegend BulletSize="20"></lvc:DefaultLegend>
                </lvc:PieChart.ChartLegend>
                <lvc:PieChart.DataTooltip>
                    <lvc:DefaultTooltip BulletSize="20"></lvc:DefaultTooltip>
                </lvc:PieChart.DataTooltip>
            </lvc:PieChart>
        </DockPanel>
        <DockPanel Name="Panel01" Grid.Row="0" Grid.Column="1">
            <lvc:PieChart Name="Chart2" Grid.Row="1" Series="{Binding Bands2}" 
                      LegendLocation="None" InnerRadius="20">
                <lvc:PieChart.ChartLegend>
                    <lvc:DefaultLegend BulletSize="20"></lvc:DefaultLegend>
                </lvc:PieChart.ChartLegend>
                <lvc:PieChart.DataTooltip>
                    <lvc:DefaultTooltip BulletSize="20"></lvc:DefaultTooltip>
                </lvc:PieChart.DataTooltip>
            </lvc:PieChart>
        </DockPanel>
        <DockPanel Name="BottomPanel" Grid.Row="2">

        </DockPanel>
    </Grid>
</Window>
