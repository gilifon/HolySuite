<Window x:Class="HolyLogger.LogUploadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        xmlns:local="clr-namespace:HolyLogger"
        mc:Ignorable="d"
        Title="Send Log" Height="400" MinHeight="400" MaxHeight="400" Width="400" MinWidth="400" MaxWidth="400" Icon="Images/crown.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label x:Name="title_categories" Content="Categories" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>
        <Label x:Name="L_Mode" Content="Mode" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" FontSize="16"/>
        <ComboBox x:Name="CB_Mode" Text="{Binding CategoryMode, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}" HorizontalAlignment="Left" Margin="107,46,0,0" VerticalAlignment="Top" Width="99" FontSize="16">
            <ComboBoxItem Name="op_ssb" IsSelected="True">SSB</ComboBoxItem>
            <ComboBoxItem Name="op_cw">CW</ComboBoxItem>
            <ComboBoxItem Name="op_digi">DIGI</ComboBoxItem>
            <ComboBoxItem Name="op_mix">MIX</ComboBoxItem>
        </ComboBox>

        <Label x:Name="L_Operator" Content="Operator" HorizontalAlignment="Left" Margin="10,73,0,0" VerticalAlignment="Top" FontSize="16"/>
        <ComboBox x:Name="CB_Operator" Text="{Binding CategoryOperator, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}" HorizontalAlignment="Left" Margin="107,77,0,0" VerticalAlignment="Top" Width="99" FontSize="16">
            <ComboBoxItem Name="op_single" IsSelected="True">Single OP</ComboBoxItem>
            <ComboBoxItem Name="op_multi">Multi OP</ComboBoxItem>
            <ComboBoxItem Name="op_checklog">Checklog</ComboBoxItem>
        </ComboBox>
        <Label x:Name="L_Power" Content="Power" HorizontalAlignment="Left" Margin="10,105,0,0" VerticalAlignment="Top" FontSize="16"/>
        <ComboBox x:Name="CB_Power" Text="{Binding CategoryPower, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}" HorizontalAlignment="Left" Margin="107,110,0,0" VerticalAlignment="Top" Width="99" FontSize="16">
            <ComboBoxItem Name="op_high" IsSelected="True">HIGH</ComboBoxItem>
            <ComboBoxItem Name="op_qrp">QRP</ComboBoxItem>
        </ComboBox>

        <Label x:Name="title_info" Content="Personal Info" HorizontalAlignment="Left" Margin="10,179,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>
        
        <Label x:Name="LCallsign" Content="Callsign" HorizontalAlignment="Left" Margin="12,215,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="TB_Callsign" HorizontalAlignment="Left" Height="30" Margin="107,215,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="265" Text="{Binding Callsign, RelativeSource={RelativeSource AncestorType={x:Type Window}, Mode=FindAncestor}}" FontSize="16"  />
        
        <Label x:Name="LHandle" Content="Name" HorizontalAlignment="Left" Margin="12,250,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="TB_Handle" HorizontalAlignment="Left" Height="30" Margin="107,250,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="265" Text="{Binding Handle, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}" FontSize="16"  />

        <Label x:Name="LEmail" Content="Email" HorizontalAlignment="Left" Margin="10,286,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="TB_MyCallsign" HorizontalAlignment="Left" Height="30" Margin="107,286,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="265" Text="{Binding Email, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}" FontSize="16"  />

        <Button x:Name="SendLogBtn" Content="Save" HorizontalAlignment="Left" Margin="284,333,0,0" VerticalAlignment="Top" Width="75" FontSize="16" Click="SendLogBtn_Click"/>
        <Button x:Name="CancelBtn" Content="Cancel" HorizontalAlignment="Left" Margin="204,333,0,0" VerticalAlignment="Top" Width="75" FontSize="16" Click="CancelBtn_Click"/>
        <Image x:Name="Spinner" gif:ImageBehavior.AnimatedSource="Images\spinner.gif" HorizontalAlignment="Left" Margin="161,273,0,0" VerticalAlignment="Top" Source="Images/spinner.gif" Height="32" Width="32" Visibility="Hidden"/>

    </Grid>
</Window>
