<Window x:Class="HolyLogger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Holyland Logger" Height="380" Width="640" Icon="Images/crown.png" KeyDown="Window_KeyDown">

    <Grid ShowGridLines="false" Margin="2,0,-2,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0">
            <ToolBarTray DockPanel.Dock="Top">
                <ToolBar>
                    <Button ToolTip="Paste from Windows Clipboard.">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="Images/document.png" />
                            <TextBlock Margin="3,0,0,0">File</TextBlock>
                        </StackPanel>
                    </Button>
                    <Button x:Name="QRZBtn" ToolTip="Show QRZ.COM Page for the DX Station" Click="QRZBtn_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="Images/qrz.png" />
                            <TextBlock Margin="3,0,0,0">QRZ</TextBlock>
                        </StackPanel>
                    </Button>
                </ToolBar>
            </ToolBarTray>
            <TextBox AcceptsReturn="True" />
        </DockPanel>
        <DockPanel Grid.Row="3">
            <StatusBar DockPanel.Dock="Bottom">
                <StatusBarItem>
                    <TextBlock Name="lblCursorPosition" />
                </StatusBarItem>
            </StatusBar>
        </DockPanel>


        <Label Content="My Callsign" HorizontalAlignment="Left" Margin="10,19,0,0" VerticalAlignment="Top" Grid.Row="1" />
        <TextBox x:Name="TB_MyCallsign" HorizontalAlignment="Left" Height="23" Margin="81,21,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" CharacterCasing="Upper" Grid.Row="1" />
        <Label Content="My Grid Square" HorizontalAlignment="Left" Margin="201,19,0,0" VerticalAlignment="Top" Grid.Row="1" />
        <TextBox x:Name="TB_MyGrid" HorizontalAlignment="Left" Height="23" Margin="293,21,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" CharacterCasing="Upper" Grid.Row="1" />
        <Image x:Name="Lock_Btn" HorizontalAlignment="Left" Height="20" Margin="591,21,0,0" VerticalAlignment="Top" Width="20" Source="Images/lock.png" Stretch="None" MouseUp="Lock_Btn_MouseUp" Grid.Row="1" />

        <Label Content="Frequency" HorizontalAlignment="Left" Margin="412,19,0,0" VerticalAlignment="Top" Grid.Row="1" />
        <TextBox x:Name="TB_Frequency" HorizontalAlignment="Left" Height="23" Margin="477,21,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" Grid.Row="1" />
        <Label Content="DX Callsign" HorizontalAlignment="Left" Margin="10,81,0,0" VerticalAlignment="Top" Grid.Row="1" />
        <TextBox x:Name="TB_DXCallsign" HorizontalAlignment="Left" Height="23" Margin="81,83,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" CharacterCasing="Upper" Grid.Row="1" />


        <Label Content="Exchange" HorizontalAlignment="Left" Margin="10,117,0,0" VerticalAlignment="Top" Grid.Row="1" />
        <TextBox x:Name="TB_Exchange" HorizontalAlignment="Left" Height="23" Margin="81,119,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" CharacterCasing="Upper" Grid.Row="1" />
        <Label Content="RST Sent" HorizontalAlignment="Left" Margin="281,116,0,0" VerticalAlignment="Top" Grid.Row="1" />
        <TextBox x:Name="TB_RSTSent" HorizontalAlignment="Left" Height="23" Margin="343,119,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" Text="59" Grid.Row="1" GotFocus="RST_GotFocus" />
        <Label Content="RST Rcvd" HorizontalAlignment="Left" Margin="463,116,0,0" VerticalAlignment="Top" Grid.Row="1" />
        <TextBox x:Name="TB_RSTRcvd" HorizontalAlignment="Left" Height="23" Margin="527,119,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" Text="59" Grid.Row="1" GotFocus="RST_GotFocus" />

        <Label Content="Date" HorizontalAlignment="Left" Margin="251,80,0,0" VerticalAlignment="Top" Grid.Row="1" />
        <DatePicker x:Name="DatePicker_QsoDate" HorizontalAlignment="Left" Margin="293,82,0,0" VerticalAlignment="Top" Grid.Row="1" />
        <Label Content="Time" HorizontalAlignment="Left" Margin="436,80,0,0" VerticalAlignment="Top" Grid.Row="1" />
        <TextBox x:Name="TB_QsoTime" HorizontalAlignment="Left" Height="23" Margin="477,82,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" Grid.Row="1" />
        <Image x:Name="RefreshDateTime_Btn" HorizontalAlignment="Left" Height="20" Margin="591,85,0,0" VerticalAlignment="Top" Width="20" Source="Images/refresh.png" Stretch="None" MouseUp="RefreshDateTime_Btn_MouseUp" Grid.Row="1" />

        <Border BorderBrush="Gray" BorderThickness="1" HorizontalAlignment="Left" Height="1" Margin="10,61,0,0" VerticalAlignment="Top" Width="601" Grid.Row="1" />
        <Button x:Name="AddBtn" Content="Add (F1)" HorizontalAlignment="Left" Margin="536,5,0,0" VerticalAlignment="Top" Width="75" Grid.Row="2" Click="AddBtn_Click" />
        <Button x:Name="ClearBtn" Content="Clear (F5)" HorizontalAlignment="Left" Margin="447,5,0,0" VerticalAlignment="Top" Width="75" Grid.Row="2" Click="ClearBtn_Click" />
    </Grid>

</Window>
