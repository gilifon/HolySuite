<Window x:Class="HolyLogger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Holyland Logger" Height="480" Width="600">

    <Grid>
        <Label Content="My Callsign" HorizontalAlignment="Left" Margin="10,47,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TB_MyCallsign" HorizontalAlignment="Left" Height="23" Margin="81,49,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" CharacterCasing="Upper"/>
        <Label Content="My Grid Square" HorizontalAlignment="Left" Margin="323,47,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TB_MyGrid" HorizontalAlignment="Left" Height="23" Margin="415,49,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" CharacterCasing="Upper"/>
        <Image x:Name="Lock_Btn" HorizontalAlignment="Left" Height="20" Margin="547,49,0,0" VerticalAlignment="Top" Width="20" Source="Images/lock.png" Stretch="None" MouseUp="Lock_Btn_MouseUp"/>

        <Label Content="Frequency" HorizontalAlignment="Left" Margin="10,108,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TB_Frequency" HorizontalAlignment="Left" Height="23" Margin="81,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Date" HorizontalAlignment="Left" Margin="251,108,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="DatePicker_QsoDate" HorizontalAlignment="Left" Margin="291,110,0,0" VerticalAlignment="Top"/>
        <Label Content="Time" HorizontalAlignment="Left" Margin="402,108,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TB_QsoTime" HorizontalAlignment="Left" Height="23" Margin="443,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="92"/>
        <Image x:Name="RefreshDateTime_Btn" HorizontalAlignment="Left" Height="20" Margin="547,113,0,0" VerticalAlignment="Top" Width="20" Source="Images/refresh.png" Stretch="None" MouseUp="RefreshDateTime_Btn_MouseUp"/>
        
        
        <Label Content="DX Callsign" HorizontalAlignment="Left" Margin="10,145,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TB_DXCallsign" HorizontalAlignment="Left" Height="23" Margin="81,147,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="RST Sent" HorizontalAlignment="Left" Margin="251,144,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TB_RSTSent" HorizontalAlignment="Left" Height="23" Margin="313,147,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="82" Text="59"/>
        <Label Content="RST Rcvd" HorizontalAlignment="Left" Margin="402,144,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TB_RSTRcvd" HorizontalAlignment="Left" Height="23" Margin="466,147,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="69" Text="59"/>
        <Label Content="Exchange" HorizontalAlignment="Left" Margin="10,183,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TB_Exchange" HorizontalAlignment="Left" Height="23" Margin="81,185,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        
        
        <Border BorderBrush="Gray" BorderThickness="1" HorizontalAlignment="Left" Height="1" Margin="10,89,0,0" VerticalAlignment="Top" Width="572"/>

    </Grid>
</Window>
