<UserControl x:Class="HolyLogger.OptionsUserControls.QRZServiceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HolyLogger.OptionsUserControls"
             mc:Ignorable="d" Height="150" Width="380">
    <Grid ShowGridLines="false" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label x:Name="label" Content="QRZ.com Subscription" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>
        <Label x:Name="label1" Content="User Name" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="TB_UserName" HorizontalAlignment="Left" Height="23" Margin="107,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="265" FontSize="16" TextChanged="TB_UserName_TextChanged" />
        <PasswordBox x:Name="TB_Password" HorizontalAlignment="Left" Margin="107,76,0,0" VerticalAlignment="Top" Width="265" FontSize="16" PasswordChanged="TB_Password_PasswordChanged"/>
        <Label x:Name="label1_Copy" Content="Password" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Button x:Name="TestConnectionBtn" Content="Test Connection" HorizontalAlignment="Left" Margin="217,113,0,0" VerticalAlignment="Top" Width="155" FontSize="16" Click="TestConnectionBtn_Click"/>
    </Grid>
</UserControl>
