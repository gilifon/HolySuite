<Window x:Class="HolyLogger.SignboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Signboard" Height="330" Width="280" Icon="Images/sign.png">
    <Grid x:Name="LayoutGrid">
        <!-- Define Columns -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Viewbox Grid.Row="0">
            <TextBlock TextWrapping="Wrap" Text="{Binding Callsign}" FontFamily="Arial Black" FontWeight="Bold" />
        </Viewbox>
        <Viewbox Grid.Row="1">
            <TextBlock TextWrapping="Wrap" Text="{Binding Square}" FontFamily="Arial Black" FontWeight="Bold" />
        </Viewbox>
    </Grid>
</Window>
