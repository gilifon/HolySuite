<UserControl x:Class="HolyLogger.ToolsUserControls.AzimuthUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HolyLogger.ToolsUserControls"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/HolyLogger;component/Images/compass.png"/>
        </Grid.Background>
        <Image x:Name="Needle" HorizontalAlignment="Stretch"  Height="200" Margin="-2,0,0,0" VerticalAlignment="Top" Width="200" Source="/HolyLogger;component/Images/needle.png"/>
        <Label x:Name="Lbl_Azimuth" Content="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="16"/>



    </Grid>
</UserControl>
