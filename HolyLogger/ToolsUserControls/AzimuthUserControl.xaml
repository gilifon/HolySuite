<UserControl x:Class="HolyLogger.ToolsUserControls.AzimuthUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HolyLogger.ToolsUserControls"
             mc:Ignorable="d" 
             d:DesignHeight="220" d:DesignWidth="220">
    <Grid x:Name="LayoutGrid">
        <Grid.Background>
            <ImageBrush ImageSource="/HolyLogger;component/Images/compass.png"/>
        </Grid.Background>
        <Image x:Name="Needle" HorizontalAlignment="Stretch"  Height="220" Width="220" Margin="-2,0,0,0" VerticalAlignment="Top" Source="/HolyLogger;component/Images/needle.png"/>
        <TextBlock x:Name="Lbl_Info" Text="{Binding Value}" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="16" TextAlignment="Center"/>
    </Grid>
</UserControl>
